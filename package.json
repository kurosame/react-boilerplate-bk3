{
  "name": "react-boilerplate",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "server-test start:mock http://localhost:3000 start:server",
    "start:e2e": "server-test start:mock http://localhost:3000 start:server:e2e",
    "start:mock": "json-server fixtures/mock.json",
    "start:server": "webpack-dev-server --open --port 8000 --mode=development",
    "start:server:e2e": "webpack-dev-server --port 9000 --mode=development",
    "build": "webpack --mode=development",
    "build:production": "webpack --mode=production",
    "test": "jest --watchAll",
    "test:ci": "jest",
    "e2e": "server-test start:e2e http-get://localhost:9000 e2e:run",
    "e2e:ci": "server-test start:e2e http-get://localhost:9000 e2e:run:ci",
    "e2e:run": "cypress open",
    "e2e:run:ci": "cypress run -b chrome",
    "clean:cache": "rimraf ./node_modules/.cache",
    "clean:dist": "rimraf ./dist/**/*",
    "clean:screenshots": "rimraf ./test/e2e/cypress/screenshots/**/*"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-actions": "^2.4.0",
    "redux-devtools-extension": "^2.13.5",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.0",
    "styled-components": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.1.2",
    "@kurosame/stylelint-config-react": "^1.0.0",
    "@kurosame/tslint-config-react": "^1.0.0",
    "@types/enzyme": "^3.9.0",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.15",
    "@types/moxios": "^0.4.8",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.1.1",
    "@types/react-router-dom": "^4.3.4",
    "@types/redux-actions": "^2.6.1",
    "@types/redux-logger": "^3.0.7",
    "@types/redux-mock-store": "^1.0.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.0.0",
    "copy-webpack-plugin": "^4.5.1",
    "core-js": "^3.1.4",
    "cypress": "^3.1.5",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "fork-ts-checker-webpack-plugin": "^0.5.2",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.1.0",
    "json-server": "^0.14.2",
    "moxios": "^0.4.0",
    "redux-mock-store": "^1.5.3",
    "start-server-and-test": "^1.7.11",
    "stylelint": "^8.0.0",
    "stylelint-custom-processor-loader": "^0.5.0",
    "thread-loader": "^2.1.2",
    "ts-jest": "^22.4.6",
